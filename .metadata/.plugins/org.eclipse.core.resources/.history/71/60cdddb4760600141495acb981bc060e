package sortmerge;

import java.util.Arrays;
import java.util.Scanner;

public class MergeSort {

	/**
	 * Merge Sort
	 * @param args
	 */
	public static void main(String[] args) {
		System.out.println("Input an integer array of ten numbers.");
		Scanner scanner = new Scanner(System.in);
		int[] arr = new int[10];
		for(int i = 0; i < arr.length; i++){
			arr[i] = scanner.nextInt();
		}
		for (int i = 0; i < arr.length; i++) {
			System.out.print(arr[i] + "  ");
		}
		System.out.println("\n**************");
		
		int[] newArr = mergeSort(arr);
		for (int i = 0; i < newArr.length; i++) {
			System.out.print(newArr[i] + " ");
		}
	}

	protected static int[] mergeSort(int[] arr) {
		if(arr.length > 1){
			int l = arr.length/2;
			
			int[] left = Arrays.copyOfRange(arr, 0, l-1);
			int[] right = Arrays.copyOfRange(arr, l, arr.length);
			mergeSort(left);
			mergeSort(right);
		}
		return arr;
	}
	
}
